{
  "name": "fastify-cjs-ui",
  "version": "1.2.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "test": "node --env-file=.env.test --test --test-concurrency=1 './tests/**/*.test.js'",
    "test:only": "node --env-file=.env.test --test --test-only './tests/**/*.test.js'",
    "test:single": "node --env-file=.env.test --test --test-concurrency=1",
    "test:coverage": "c8 --reporter=text --reporter=lcov node --env-file=.env.test --test --test-concurrency=1 './tests/**/*.test.js'",
    "test:report": "c8 --reporter=html node --env-file=.env.test --test --test-concurrency=1 './tests/**/*.test.js'",
    "dev": "npm run css:build && node --env-file=.env --watch-path=./src src/server.js",
    "start": "node src/server.js",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "css:build": "tailwindcss -i ./templates/css/custom.css -o ./public/css/styles.css --minify",
    "css:watch": "tailwindcss -i ./templates/css/custom.css -o ./public/css/styles.css --watch",
    "update:alpine": "curl -L \"https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js\" -o public/js/alpine.min.js",
    "update:deps": "npm run update:alpine"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandroandrade/fastify-cjs-ui.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leandroandrade/fastify-cjs-ui/issues"
  },
  "homepage": "https://github.com/leandroandrade/fastify-cjs-ui#readme",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/env": "^5.0.3",
    "@fastify/formbody": "^8.0.2",
    "@fastify/sensible": "^6.0.4",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@fastify/view": "^11.1.1",
    "close-with-grace": "^2.4.0",
    "ejs": "^4.0.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "neostandard": "^0.12.2",
    "playwright": "^1.57.0",
    "tailwindcss": "^4.1.18"
  }
}
